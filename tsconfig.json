{
    "compilerOptions": {
       "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "inlineSources": true,
        "target": "es6",
        "mapRoot": "build",
        "ourDir": "build/src"
    },
    "filesGlob": [
        "./**/*.ts",
        "!./node_modules/**/*.ts",
        "!./typings/browser/**/*.ts",
        "!./typings/browser.d.ts",
        "!./build"
    ],
    "exclude": [
        "node_modules",
        "typings/browser.d.ts",
        "typings/browser"
    ],
    "atom": {
        "rewriteTsconfig": false,
        "formatOnSave": false
    }
}
